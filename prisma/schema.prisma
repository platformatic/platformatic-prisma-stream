generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_PRISMA")
}

model Recipe {
  id          Int    @id @default(autoincrement())
  title       String
  ingredients String
  difficulty  String
  author_id   Int
  author      Author @relation(fields: [author_id], references: [id])
  rating      Int @default(0)

  @@map("recipes")
}

model Author {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]

  @@map("authors")
}

model versions {
  version Int                                      @id @default(autoincrement())
  name    String?
  md5     String?
  run_at  Unsupported("timestamp with time zone")?
  @@ignore
}
